<h1><%= @todolist.title %></h1>

<h2><%= @todolist.description %></h2>

  <h3>Completed items : </h3>
   <ul>
     <% @todolist.items.complete.each do |item|  %>
    <li><%= item.content %></li>
     <% end %>
   </ul>


   <h3>Completed items :</h3>
   <ul>
     <% @todolist.items.incomplete.each do |item| %>
     <li><%= item.content %></li>
     <% end %>
   </ul>

<%= link_to "New item", new_todolist_item_path(@todolist) %>

<%= link_to 'Edit', edit_todolist_path(@todolist) %> |
<%= link_to 'Back', todolists_path %>
